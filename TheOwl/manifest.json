{
  "manifest_version": 2,
  "name": "The Owl",
  "version": "0.1",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["content.js"],
      "css": ["theowl.css"]
    }
  ],

  "permissions": [
    "activeTab",
    "declarativeContent",
    "storage",
    "tabs",
    "commands"
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_popup": "popup.html"
  },

  "icons": {
    "128": "favicon.png"
  },

  "commands": {
    "alert": {
      "description": "DÃ©clare une alerte",
      "suggested_key": {
        "default": "Ctrl+Shift+Y"
      }
    },
    "toggle-feature": {
      "suggested_key": {
        "default": "Ctrl+Shift+X",
        "windows": "Ctrl+Shift+X",
        "linux": "Ctrl+Shift+X"
      },
      "description": "Send a 'toggle-feature' event"
    },
    "toggle-feature-foo": {
      "suggested_key": {
        "default": "Ctrl+Shift+U",
        "windows": "Ctrl+Shift+U",
        "linux": "Ctrl+Shift+U"
      },
      "description": "Send a 'toggle-feature' event"
    }
  }
}