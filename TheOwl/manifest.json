{
  "manifest_version": 2,
  "name": "The Owl",
  "version": "0.1",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["content.js"],
      "css": ["theowl.css"]
    }
  ],

  "permissions": ["activeTab", "declarativeContent","storage", "tabs"],

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_popup": "popup.html"
  },

  "icons": {
    "128": "favicon.png"
  }
}